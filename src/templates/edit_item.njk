<h2>Edit "{{ item.get('title') }}"</h2>

<div class="row justify-content-start">
    <div class="col">
        <form action="#" method="get">
            <input type="hidden" value="{{ item.get('id') }}">
            <div class="form-group">
                <label for="title" class="col-sm-1-12 col-form-label">Title</label>
                <div class="col-sm-1-12">
                    <input
                            type="text"
                            class="form-control"
                            name="title"
                            id="title"
                            placeholder="A Tale of Two Cities"
                            value="{{ item.get('title') }}"
                            required="required">
                </div>
            </div>
            <div class="form-group">
                <label for="author" class="col-sm-1-12 col-form-label">Author</label>
                <div class="col-sm-1-12">
                    <input
                            type="text"
                            class="form-control"
                            name="author"
                            id="author"
                            placeholder="Mark Twain"
                            value="{{ item.get('author') }}"
                            required="required">
                </div>
            </div>
            <div class="form-group">
                <label for="format" class="col-sm-1-12 col-form-label">Format</label>
                <div class="col-sm-1-12">
                    <input
                            type="text"
                            class="form-control"
                            name="format"
                            id="format"
                            placeholder="paperback"
                            value="{{ item.get('format') }}">
                </div>
            </div>
            <div class="col-sm-1-12 justify-content-right">
                <input name="edit" id="edit" class="btn btn-primary align" type="submit" value="Save" onClick="">
            </div>
        </form>
    </div>
</div>
